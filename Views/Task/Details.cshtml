@using TaskManagementApplication.Helpers
@model TaskManagementApplication.Models.Task

@{
    ViewData["Title"] = "Task Details";
}

<h3 class="text-center mb-5">@Model.Title</h3>
<hr />

<div class="container mb-5">

    <div class="container row">
        <p class="col-md-4 text-start">
            <b>Priority:</b> <span class="badge @BadgeHelper.GetPriorityBadgeClass(Model.Priority)">@Model.Priority</span>
        </p>
        <p class="col-md-4 text-center">
            <b>Status:</b> <span class="badge @BadgeHelper.GetStatusBadgeClass(Model.Status)">@Model.Status</span>
        </p>
        <p class="col-md-4 text-end">@Model.DateTime?.ToString("g")</p>
    </div>

    <div class="container">
        <p>@Model.Description</p>
    </div>

</div>


<div class="mb-5">

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Task</a>

    <a asp-action="Index" class="btn btn-success float-end">Back to Task List</a>

</div>
